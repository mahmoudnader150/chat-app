<!DOCTYPE html>
<html>
<head>
    <title>Chat App - User 1</title>
    <script src="https://cdn.socket.io/socket.io-3.0.1.min.js"></script>
    <style>
        /* Styles for the chat app */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }
        .chat-container {
            max-width: 600px;
            margin: 20px auto;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        .chat-header {
            background-color: #075e54;
            color: #fff;
            padding: 15px;
            font-size: 18px;
            font-weight: bold;
            text-align: center;
        }
        .chat-messages {
            padding: 20px;
            overflow-y: scroll;
            max-height: 400px;
        }
        .message {
            margin-bottom: 10px;
            padding: 8px 12px;
            border-radius: 20px;
            max-width: 70%;
            word-wrap: break-word;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .sent-message {
            background-color: #dcf8c6;
            align-self: flex-end;
            color: #075e54;
        }
        .received-message {
            background-color: #e5e5ea;
            align-self: flex-start;
            color: #000;
        }
        .message-container {
            display: flex;
            flex-direction: column;
        }
        .message-input-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #fff;
            padding: 10px;
            border-top: 1px solid #ccc;
        }
        .message-input {
            flex: 1;
            padding: 8px;
            margin-right: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }
        .send-button {
            padding: 8px 16px;
            background-color: #128c7e;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        .send-button:hover {
            background-color: #075e54;
        }
        .message-time {
            font-size: 12px;
            color: #888;
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <div class="chat-container">
        <div class="chat-header">Chat App</div>
        <div class="chat-messages" id="messageContainer"></div>
        <div class="message-input-container">
            <input type="text" id="messageInput" class="message-input" placeholder="Type your message...">
            <button type="button" class="send-button" onclick="sendMessage()">Send</button>
        </div>
    </div>

    <script>
        const socket = io("http://localhost:3000");

        socket.on("connection", () => {
            console.log("connected");
        });

        socket.on("message", (data) => {
            displayMessage("received", data);
            console.log("message received");
        });

        function sendMessage() {
            const messageInput = document.getElementById("messageInput");
            const message = messageInput.value.trim();
            if (message !== "") {
                const timestamp = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                displayMessage("sent", message, timestamp);
                socket.emit("message", message);
                messageInput.value = "";
            }
        }

        function displayMessage(type, message, timestamp) {
            const messageContainer = document.getElementById("messageContainer");
            const messageElement = document.createElement("div");
            messageElement.classList.add("message", `${type}-message`);
            messageElement.innerHTML = `
                <span>${message}</span>
                <span class="message-time">${timestamp}</span>
            `;
            messageContainer.appendChild(messageElement);

            // Scroll to the bottom of the messages container
            messageContainer.scrollTop = messageContainer.scrollHeight;
        }
    </script>
</body>
</html>
